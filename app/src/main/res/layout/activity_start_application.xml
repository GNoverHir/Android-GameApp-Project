<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundstartimage"
    tools:context=".ui.profile.StartApplicationActivity">

    <View
        android:id="@+id/viewProfile"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="120dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="@color/purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="75dp"
        android:layout_marginStart="10dp"
        android:layout_height="75dp"
        app:srcCompat="@drawable/account_circle_24dp_000000_fill0_wght400_grad0_opsz24"
        app:layout_constraintTop_toTopOf="@id/viewProfile"
        app:layout_constraintStart_toStartOf="@id/viewProfile"
        app:layout_constraintBottom_toBottomOf="@id/viewProfile"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:fontFamily="@font/adlam_display"
        android:gravity="center"
        android:text="Bem vindo, Pedro! Vamos jogar?"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@id/profileImageView"
        app:layout_constraintEnd_toEndOf="@id/viewProfile"
        app:layout_constraintStart_toEndOf="@id/profileImageView"
        app:layout_constraintTop_toTopOf="@id/profileImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>